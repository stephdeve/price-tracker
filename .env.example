# Database Configuration
DATABASE_URL=postgresql://pricetracker:password@localhost:5432/pricetracker
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# WhatsApp (Twilio) Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_TO=whatsapp:+229XXXXXXXX

# Monitoring & Alerting
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
TELEGRAM_BOT_TOKEN=your_bot_token_for_alerts
TELEGRAM_CHAT_ID=your_chat_id_for_alerts
ALERT_EMAIL=your_email@example.com
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SENTRY_DSN=
ENVIRONMENT=development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
CORS_ORIGINS=["http://localhost:3000"]

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_TASK_ALWAYS_EAGER=false

# Scraping Configuration
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; PriceTrackerBot/1.0)
SCRAPING_CONCURRENT_REQUESTS=8
SCRAPING_DOWNLOAD_DELAY=2
SCRAPING_TIMEOUT=30
SCRAPING_RETRY_TIMES=3

# Proxy Configuration (optional)
USE_PROXY=false
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Currency Conversion
BASE_CURRENCY=USD
EXCHANGE_RATE_API_KEY=

# Product Matching
MATCHING_SIMILARITY_THRESHOLD=0.80
MATCHING_USE_ML=true
MATCHING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Anomaly Detection
ANOMALY_ZSCORE_THRESHOLD=3.0
ANOMALY_PRICE_DROP_THRESHOLD=0.15

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=change-this-to-a-random-secret-key
API_KEY_HEADER=X-API-Key

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
